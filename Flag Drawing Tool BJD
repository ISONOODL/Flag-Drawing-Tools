import turtle
import time
import random
import os
import sys

wn = turtle.Screen()
wn.bgcolor("white")

b = turtle.Turtle()
b.pencolor("black")
b.speed(0)

def outline():
    b.penup()
    b.goto(-300,-200)
    b.pendown()
    b.forward(600)
    b.left(90)
    b.forward(400)
    b.left(90)
    b.forward(600)
    b.left(90)
    b.forward(400)
    b.left(90)

def france():
    outline()
    b.fillcolor('blue')
    b.begin_fill()
    for i in range(1):
        b.forward(200)
        b.left(90)
        b.forward(400)
        b.left(90)
        b.forward(200)
        b.end_fill()
    b.pencolor("black")
    b.left(180)
    b.forward(400)
    b.begin_fill()
    b.fillcolor('red')
    for i in range(1):
        b.forward(200)
        b.right(90)
        b.forward(400)
        b.right(90)
        b.forward(200)
        b.right(90)
        b.forward(400)
    b.end_fill()
    b.right(180)
    b.forward(400)
    b.right(90)
    b.forward(400)
    b.right(90)
    b.forward(400)
    b.fillcolor('black')
    

