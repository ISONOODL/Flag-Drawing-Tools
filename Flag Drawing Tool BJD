def USAoutline():
    b.penup()
    b.goto(-300,-200)
    b.pendown()
    b.forward(620)
    b.left(90)
    b.forward(390)
    b.left(90)
    b.forward(620)
    b.left(90)
    b.forward(390)
    b.left(90)

def USAStripes():
    for i in range(6):
        b.fillcolor('#DC143C')
        b.begin_fill()
        b.penup()
        b.forward(620)
        b.left(90)
        b.pendown()
        b.forward(30)
        b.left(90)
        b.penup()
        b.forward(620)
        b.right(90)
        b.pendown()
        b.forward(30)
        b.right(90)
        b.end_fill()

    b.fillcolor('#DC143C')
    b.begin_fill()
    b.penup()
    b.forward(620)
    b.left(90)
    b.pendown()
    b.forward(30)
    b.left(90)
    b.penup()
    b.forward(620)
    b.end_fill()

        


def USARectangle():
    b.left(90)
    for i in range(1):
        b.fillcolor('medium blue')
        b.begin_fill()
        b.forward(210)
        b.left(90)
        b.forward(260)
        b.left(90)
        b.forward(210)
        b.end_fill()

def USAStar():
    for i in range(5):
            b.forward(20)
            b.right(144)


def USAStars():
    b.left(90)
    b.forward(260)
    b.left(90)
    b.forward(10)
    b.left(90)
    
    b.fillcolor('white')
    b.begin_fill()
    b.penup()
    for i in range(6):
        b.forward(32)
        USAStar()
    b.end_fill()

    b.goto(-300,190)
    b.right(90)
    b.forward(35)
    b.left(90)

    b.fillcolor('white')
    b.begin_fill()
    b.penup()
    for i in range(5):
        b.forward(32)
        USAStar()
    b.end_fill()
    
    b.goto(-300,190)
    b.right(90)
    b.forward(65)
    b.left(90)
    b.fillcolor('white')
    b.begin_fill()
    for i in range(6):
        b.forward(32)
        USAStar()
    b.end_fill()

def USA():
    USAoutline()
    USAStripes()
    USARectangle()
    USAStars()


flaginput = input("What flag would you like to draw, name it by the country      ")


if flaginput == "france":
    france()

elif flaginput == "ireland":
    ireland()

elif flaginput == "italy":
    italy()

elif flaginput == "germany":
    germany()

elif flaginput == "netherlands":
    netherlands()

elif flaginput == "belgium":
    belgium()

elif flaginput == "USA":
    USA()

elif flaginput != "france" or "ireland" or "italy" or "germany" or "netherlands" or "belgium" or "USA":
    print("that is not a valid option, restart")    
