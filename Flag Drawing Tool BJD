def germany():
    outline()
    b.left(90)
    b.forward(133)
    b.right(90)
    b.forward(600)
    b.left(90)
    b.forward(133)
    b.left(90)
    b.forward(600)
    b.right(180)
    b.fillcolor('black')
    b.begin_fill()
    for i in range(1):
        b.forward(600)
        b.left(90)
        b.forward(133)
        b.left(90)
        b.forward(600)
        b.end_fill()
    b.end_fill()
    b.left(90)
    b.forward(133)
    b.left(90)
    b.fillcolor('red')
    b.begin_fill()
    for i in range(1):
        b.forward(600)
        b.right(90)
        b.forward(133)
        b.right(90)
        b.forward(600)
        b.end_fill()
    b.left(90)
    b.fillcolor('yellow')
    b.begin_fill()
    for i in range(1):
        b.forward(133)
        b.left(90)
        b.forward(600)
        b.left(90)
        b.forward(133)
        b.end_fill()
    b.left(90)
    b.forward(600)
    b.right(90)
    b.forward(266)
    b.fillcolor('black')

