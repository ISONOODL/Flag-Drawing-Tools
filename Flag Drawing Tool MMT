    cruz.end_fill()
    cruz.right(180)
    cruz.fillcolor('blue')
    cruz.begin_fill()
    for i in range(1):
        cruz.forward(450)
        cruz.right(90)
        cruz.forward(100)
        cruz.right(90)
        cruz.forward(450)
    cruz.end_fill()
    cruz.right(180)
