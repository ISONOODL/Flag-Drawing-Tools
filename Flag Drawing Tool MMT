import turtle
import random

print("Welcome to the flag drawing tool")

wn = turtle.Screen()
cruz = turtle.Turtle()
cruz.speed(0)
cruz.pencolor("black")
cruz.hideturtle()
cruz.ht()

def OUTLINE():
    cruz.penup()
    cruz.goto(-200,200)
    cruz.pendown()
    cruz.forward(450)
    cruz.right(90)
    cruz.forward(300)
    cruz.right(90)
    cruz.forward(450)
    cruz.right(90)
    cruz.forward(300)

def monaco():
    cruz.right(90)
    cruz.fillcolor('red')
    cruz.begin_fill()
    for i in range(1):
      cruz.forward(450)
      cruz.right(90)
      cruz.forward(150)
      cruz.right(90)
      cruz.forward(450)
    cruz.end_fill()

    print ("This is the flag of Monaco")



def germany():
    cruz.right(90)
    cruz.fillcolor('black')
    cruz.begin_fill()
    for i in range(1):
        cruz.forward(450)
        cruz.right(90)
        cruz.forward(100)
        cruz.right(90)
        cruz.forward(450)
    cruz.end_fill()
    cruz.right(180)
    cruz.fillcolor('red')
    cruz.begin_fill()
    for i in range(1):
        cruz.forward(450)
        cruz.right(90)
        cruz.forward(100)
        cruz.right(90)
        cruz.forward(450)
    cruz.end_fill()
    cruz.right(180)
    cruz.fillcolor('gold')
    cruz.begin_fill()
    for i in range(1):
        cruz.forward(450)
        cruz.right(90)
        cruz.forward(100)
        cruz.right(90)
        cruz.forward(450)
    cruz.end_fill()
    cruz.right(90)
    cruz.pencolor('black')
    cruz.forward(300)
    cruz.right(90)
    cruz.forward(450)
    
 

    print ("This is the German flag")

